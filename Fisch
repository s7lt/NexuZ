function CorrectKeyNotif()
    OrionLib:MakeNotification({
        Name = "Loading Script...",
        Content = "Correct Key",
        Image = "rbxassetid://4483345998",
        Time = 5
    })
end

function InCorrectKeyNotif()
    OrionLib:MakeNotification({
        Name = "Wrong Key :x:",
        Content = "You typed the Wrong Key :x:",
        Image = "rbxassetid://4483345998",
        Time = 4
    })
end

function MakeScriptHub()

	local infMoneyEnabled = false


	local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

	local Window = OrionLib:MakeWindow({Name = "NexuZ Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "NexuZ Unlocked âœ…"})

	local Tab = Window:MakeTab({
        Name = "Test",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })

	Tab:AddToggle({
		Name = "Enable Inf Money ðŸ’¸",
		Default = false,
		Callback = function(Value)
			infMoneyEnabled = Value
		
			if infMoneyEnabled then
	
				spawn(function()
					while infMoneyEnabled do
	
						game:GetService("ReplicatedStorage").RewardEvents.GiveReward:FireServer("5")
						
	
						wait(0.1)
					end
				end)
			end
		end
	})
	

end
